<h2>Show User</h2>

<ul>

  <li>
    <strong>Twitter screen name:</strong>
    <%= @user.twitter_screen_name %>
  </li>

  <li>
    <strong>Twitter:</strong>
    <%= @user.twitter_id %>
  </li>

  <li>
    <strong>Twitter name:</strong>
    <%= @user.twitter_name %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
